@using JabbR_Core;


<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="UTF-8" />
    <title>JabbR</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
   

    <link href="~/lib/bootstrap/css/bootstrap-responsive.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/font/font-awesome.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/themes/default/Chat.css" />
    <link href="~/css/emoji20.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div id="login">
            <div class="login-header">
                <div class="banner" role="banner">
                    <h1>JabbR</h1>
                </div>
            </div>
            <div class="login-body">
              <!--  atsignHtml.AlertMessages()-->
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="@Url.Content("~/Scripts/jquery-2.0.3.min.js")"></script>
    <script type="text/javascript">
        (function($) {
            $('input.error').closest('.control-group').addClass('error');

            $('form').each(function () {
                var $el = $(this),
                    action = $el.attr('action');

                if (action.indexOf('#') === -1) {
                    $el.attr('action', action + document.location.hash);
                }
            });

            $('a').each(function() {
                var $el = $(this),
                    href = $el.attr('href');

                if (href.indexOf('#') === -1) {
                    if ($el.is('.btn-provider')) {
                        href = href + encodeURIComponent(document.location.hash);
                    }

                    $el.attr('href', href + document.location.hash);
                }
            });
        }(jQuery));
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
